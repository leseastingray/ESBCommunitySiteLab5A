@model IEnumerable<ESBCommunitySite.Models.ContactInfo>

@{
    ViewData["Title"] = "Mailbox";
}
<! DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MailBox</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel-body">
    <h2>Mailbox</h2>
        <table class="table table-lg table-striped table-bordered">
            <thead>
                <tr>
                    <th>Recipient</th>
                    <th>Message Content</th>
                    <th>Message Priority</th>
                    <th>Sender</th>
                    <th>Date & Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ContactInfo cI in Model)
                {
                    <tr>
                        <td class="info">@cI.Recipient</td>
                        <td>@cI.MessageText</td>
                        <td>@cI.MessagePriority</td>
                        <td class="info">@cI.Sender</td>
                        <td>@cI.MessageDate.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-action="GetPriorityMail">Order By Priority</a>
        <a asp-action="GetMail">Order By Date</a>
    </div>
</body>
</html>